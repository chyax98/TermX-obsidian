{
  "name": "obsidian-termx",
  "version": "1.0.0",
  "description": "Modern terminal deeply integrated with Obsidian",
  "author": "chyax98",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "deploy": "npm run build && mkdir -p ~/note-vsc/.obsidian/plugins/termx && cp main.js manifest.json styles.css ~/note-vsc/.obsidian/plugins/termx/"
  },
  "keywords": [
    "obsidian",
    "terminal"
  ],
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/node": "^20.10.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.20.0",
    "obsidian": "latest",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "electron-rebuild": "^3.2.9",
    "node-pty": "^1.1.0"
  }
}
